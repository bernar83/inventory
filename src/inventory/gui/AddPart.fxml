<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventory.gui.AddPartController" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Add Part" 
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    
        <font>
            <Font name="System Bold" size="22.0"/>
        </font>
        
    </Label>
        
    <RadioButton text="In-House" 
        GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    
    <RadioButton text="Outsourced"
        GridPane.columnIndex="2" GridPane.rowIndex="0"/>

    <Label text="ID"
        GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Name"
        GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Inv"
        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Price/Cost"
        GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Max"
        GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    
    <Label text="Min"
        GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    <TextField GridPane.columnIndex="3" GridPane.rowIndex="5"/>
    
    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Save"/>
        <Button text="Cancel"/>
    </HBox>
    
</GridPane>
